<%=form_for entry do |f| %>
<p>
    <%= f.label :word %>
    <%= f.text_field :word, placeholder: "Enter a word" %>
</p>
<p>
    <%= f.label :definition %>
    <%= f.text_field :definition, placeholder: "Enter a definition" %>
</p>
<p>
    <%= f.label :language %>
    <%= f.text_field :language, placeholder: "Enter a language" %>
</p>
<p>
    <%=f.submit %>
</p>
<% end %>
